<script>
  const ammarcehaUrl = 'http://192.168.43.87:3003';
  const azraUrl = 'http://192.168.43.102:3003';

  const mainUrl = ammarcehaUrl;

  $(function(){ // on document load
    getPorodice();

    $("#btnUnos").click(() => {     
      insertPlant();
    })
  });

  function getPorodice(){
    console.log("Poziva se !");
    $.ajax({
      type:'GET',
      url: mainUrl+'/plantfamilies',
      success: (data) => {
        console.log("Porodice GET!");
        console.log(data);
        let html = '';
        if(data.length > 0){
          data.forEach((family, index) => {
            html += `<option value="${family.id}">${family.name}</option>`;
          })
        }
        $("#selectPorodice").html(html);
      },
      error: (err) => {
        console.log(err);
      }
    })
  }

 function insertPlant(){
  /*
  {
    "name": "string",
    "latName": "string",
    "family": 0,
    "kingdom": "string",
    "plantOrder": "string",
    "about": "string",
    "geoLat": "string",
    "geoLon": "string",
    "image": "string"
  }*/

  let nazivBiljke = $("#nazivBiljke").val();
  let latinskiNaziv = $("#latinskiNaziv").val();
  let family = $("#selectPorodice option:selected").val();
  let lat = $("#lat").val();
  let lon = $("#lon").val();

  let plantObj = {
    "name": nazivBiljke,
    "latName": latinskiNaziv,
    "family": parseInt(family),
    "kingdom": "Kingdom of Orhideo",
    "plantOrder": "Order of Orhideo",
    "about": "",
    "geoLat": lat,
    "geoLon": lon,
    "image": null
  }

  console.log("Biljka: ");
  console.log(plantObj);

  fetch(mainUrl+"/plants",{
           method:'POST',
           headers:{
               'Accept': 'application/json',
               'Content-Type': 'application/json'
           },
           body: JSON.stringify(plantObj)
       })
       .then(res=>console.log(res))
       .catch(err=>console.log(err));
 }
</script>

